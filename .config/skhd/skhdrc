# Open terminal
cmd - return : ~/Applications/"Home Manager Apps"/WezTerm.app/wezterm

# Open browser
shift + cmd - return : open -na /run/current-system/sw/bin/brave

# Open discord
shift + ctrl - return : /run/current-system/sw/bin/Discord
